<script>
    let arrIdChange = [];
    let tokenJWT = localStorage['token'];
    $(`#notification_count_unreadrequest`).html(`${String(localStorage['countUnreaderRequest'])}`)
    const takeDataTable = async ()=>{
        let res = await axios.get('/api/admin/price/getPrice');
        if(res.data && res.data.data ){
            $('#data_table_root').html('')
            $('#data_table_root').append(`
                        <tr>
                            <td class="td_product">
                                <input type="text" 
                                       id="tkkt"
                                       value="${res.data.data.tkkt}" 
                                       class="btn btn-primary"/>
                            </td>
                            <td class="td_product">
                                <input 
                                      id="tknt"
                                      value="${res.data.data.tknt}" class="btn btn-primary"/>
                            </td>
                            <td class="td_product">
                                <input 
                                      id="tktg"
                                      value="${res.data.data.tktg}" class="btn btn-primary"/>
                            </td>
                        </tr>
                `);
        }
        else{
            window.location.href = "/";
        }
    }
    takeDataTable();

    const SaveChange = async () =>{
        try{
            axios({
                    method: "post",
                    url: "/api/admin/price/editPrice",
                    data: {
                        tknt:$(`#tknt`).val(),
                        tkkt:$(`#tkkt`).val(),
                        type:$(`#tktg`).val(),
                        tokenJWT
                    },
                    headers: { "Content-Type": "multipart/form-data" }
                }).catch((e)=>{
                    console.log("SaveChange",e)
                })
            $('#notification_save').show();
            setTimeout(()=>{
                $('#notification_save').hide();
            },2000);
        }
        catch(e){
            console.log(e);
        }
    }  


    
</script>
