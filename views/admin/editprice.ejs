<script>
    let tokenJWT = localStorage['token'];

    if (localStorage['countUnreaderRequest']) {
        document.getElementById('notification_count_unreadrequest').textContent = localStorage['countUnreaderRequest'];
    }

    const takeDataTable = async () => {
        try {
            const res = await axios.get('/api/admin/price/getPrice');
            
            if (res.data?.data) {
                document.getElementById('tkkt').value = res.data.data.tkkt || '';
                document.getElementById('tknt').value = res.data.data.tknt || '';
                document.getElementById('tktg').value = res.data.data.tktg || '';
            } else {
                window.location.href = "/admin/login";
            }
        } catch (error) {
            console.error('Error:', error);
        }
    };

    const SaveChange = async () => {
        try {
            await axios({
                method: "post",
                url: "/api/admin/price/editPrice",
                data: {
                    tknt: document.getElementById('tknt').value,
                    tkkt: document.getElementById('tkkt').value,
                    type: document.getElementById('tktg').value,
                    tokenJWT
                },
                headers: { "Content-Type": "multipart/form-data" }
            });
            alert('Đã lưu thành công!');
        } catch (error) {
            console.error('Error:', error);
            alert('Có lỗi xảy ra!');
        }
    };

    takeDataTable();
</script>
