<div class="apple-login-page">
    <div class="apple-login-container">
        <div class="apple-login-card">
            <img src="/assets/logo/logo.png" alt="AdFuture" class="apple-login-logo">
            <h1 class="apple-login-title">AdFuture Admin</h1>
            <p class="apple-login-subtitle">Đăng nhập để tiếp tục</p>
            
            <form class="apple-login-form" id="loginForm">
                <div class="apple-form-group">
                    <label class="apple-form-label">Tên đăng nhập</label>
                    <input type="text" id="username" class="apple-input" placeholder="Nhập tên đăng nhập" autocomplete="username">
                </div>
                
                <div class="apple-form-group">
                    <label class="apple-form-label">Mật khẩu</label>
                    <input type="password" id="password" class="apple-input" placeholder="Nhập mật khẩu" autocomplete="current-password">
                </div>
                
                <div id="login_error" class="apple-alert apple-alert-error" style="display: none;"></div>
                
                <button type="submit" class="apple-btn apple-btn-primary apple-login-btn" id="login_btn">
                    <span id="btn_text">Đăng nhập</span>
                    <span id="btn_loading" style="display: none;"><i class="fa-solid fa-spinner fa-spin"></i></span>
                </button>
            </form>
        </div>
        
        <p style="text-align: center; margin-top: 24px; color: rgba(255,255,255,0.7); font-size: 13px;">
            &copy; 2024 AdFuture. All rights reserved.
        </p>
    </div>
</div>

<script>
    $('#loginForm').on('submit', async function(e) {
        e.preventDefault();
        
        const username = $('#username').val().trim();
        const password = $('#password').val();
        
        if (!username || !password) {
            $('#login_error').text('Vui lòng nhập đầy đủ thông tin').show();
            return;
        }
        
        $('#login_error').hide();
        $('#btn_text').hide();
        $('#btn_loading').show();
        $('#login_btn').prop('disabled', true);
        
        try {
            const res = await axios({
                method: "post",
                url: "/api/admin/auth/login",
                data: {
                    userName: username,
                    password: password,
                },
                headers: { "Content-Type": "multipart/form-data" }
            });
            
            if (res.data && res.data.data) {
                localStorage.setItem('token', String(res.data.data));
                window.location.href = "/admin/dashboard";
            } else {
                $('#login_error').text(res.data.message || 'Đăng nhập thất bại').show();
            }
        } catch (error) {
            $('#login_error').text('Có lỗi xảy ra. Vui lòng thử lại.').show();
        } finally {
            $('#btn_text').show();
            $('#btn_loading').hide();
            $('#login_btn').prop('disabled', false);
        }
    });
    
    $('#username, #password').on('input', function() {
        $('#login_error').hide();
    });
</script>
