<div class="apple-modal-overlay" id="messageModal">
    <div class="apple-modal">
        <div class="apple-modal-header">
            <h3 class="apple-modal-title">Nội dung tin nhắn</h3>
            <button class="apple-modal-close" onclick="handleCloseModal()">
                <i class="fa-solid fa-xmark"></i>
            </button>
        </div>
        <div class="apple-modal-body">
            <textarea class="apple-textarea" id="message_content" readonly style="min-height: 200px;"></textarea>
        </div>
        <div class="apple-modal-footer">
            <button class="apple-btn apple-btn-primary" onclick="handleCloseModal()">Đóng</button>
        </div>
    </div>
</div>

<script>
    let tokenJWT = localStorage['token'];

    if (localStorage['countUnreaderRequest']) {
        document.getElementById('notification_count_unreadrequest').textContent = localStorage['countUnreaderRequest'];
    }

    const handleOpenModal = () => document.getElementById('messageModal').classList.add('active');
    const handleCloseModal = () => document.getElementById('messageModal').classList.remove('active');

    const takeDataTable = async () => {
        try {
            const res = await axios({
                method: "post",
                url: "/api/admin/contact/GetListCustomer",
                data: { tokenJWT },
                headers: { "Content-Type": "multipart/form-data" }
            });
            
            if (res.data?.data) {
                const tbody = document.getElementById('data_table_root');
                tbody.innerHTML = '';
                
                res.data.data.forEach(item => {
                    const rowClass = item.read ? '' : 'apple-table-unread';
                    tbody.innerHTML += `
                        <tr id="${item._id}" class="${rowClass}">
                            <td>${item.name}</td>
                            <td>${item.email}</td>
                            <td>${item.phone}</td>
                            <td>
                                <button class="apple-btn apple-btn-primary apple-btn-sm" onclick="ReadRequest('${encodeURIComponent(item.message)}', '${item._id}')">
                                    <i class="fa-solid fa-eye"></i> Xem tin nhắn
                                </button>
                            </td>
                        </tr>
                    `;
                });
            } else {
                window.location.href = "/admin/login";
            }
        } catch (error) {
            console.error('Error:', error);
        }
    };

    const ReadRequest = (message, id) => {
        document.getElementById('message_content').value = decodeURIComponent(message);
        handleOpenModal();
        
        document.getElementById(id).classList.remove('apple-table-unread');
        
        axios({
            method: "post",
            url: "/api/admin/contact/ReadRequestCustomer",
            data: { IdRequest: id, tokenJWT },
            headers: { "Content-Type": "multipart/form-data" }
        }).catch(console.error);

        let count = parseInt(localStorage['countUnreaderRequest'] || '0');
        if (count > 0) {
            count--;
            localStorage.setItem('countUnreaderRequest', String(count));
            document.getElementById('notification_count_unreadrequest').textContent = count;
        }
    };

    takeDataTable();
</script>
