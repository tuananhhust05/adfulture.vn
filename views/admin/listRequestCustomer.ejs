<style>
    .unread-row {
        background: rgba(0, 113, 227, 0.08) !important;
    }
    .unread-row:hover td {
        background: rgba(0, 113, 227, 0.12) !important;
    }
    .status-badge {
        display: inline-flex;
        align-items: center;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }
    .status-unread {
        background: rgba(0, 113, 227, 0.1);
        color: rgb(0, 113, 227);
    }
    .status-read {
        background: rgba(142, 142, 147, 0.1);
        color: rgb(142, 142, 147);
    }
</style>

<script>
    let tokenJWT = localStorage['token'];
    
    document.getElementById('notification_count_unreadrequest').textContent = localStorage['countUnreaderRequest'] || '0';
    
    const takeDataTable = async () => {
        try {
            const res = await axios({
                method: "post",
                url: "/api/admin/contact/GetListCustomer",
                data: { tokenJWT },
                headers: { "Content-Type": "multipart/form-data" }
            });
            
            if (res.data?.data) {
                const tbody = document.getElementById('data_table_root');
                tbody.innerHTML = '';
                
                res.data.data.forEach(item => {
                    const isUnread = !item.read;
                    tbody.innerHTML += `
                        <tr id="${item._id}" class="${isUnread ? 'unread-row' : ''}">
                            <td>
                                <span class="status-badge ${isUnread ? 'status-unread' : 'status-read'}">
                                    <i class="fa-solid ${isUnread ? 'fa-circle-dot' : 'fa-check'}" style="margin-right: 6px; font-size: 8px;"></i>
                                    ${isUnread ? 'Chưa đọc' : 'Đã đọc'}
                                </span>
                            </td>
                            <td style="font-weight: ${isUnread ? '600' : '400'};">${item.name}</td>
                            <td>${item.email}</td>
                            <td>${item.phone}</td>
                            <td>
                                <button class="apple-btn apple-btn-primary apple-btn-sm" 
                                    onclick="ReadRequest('${encodeURIComponent(item.message)}', '${item._id}')">
                                    <i class="fa-solid fa-eye"></i>
                                    Xem
                                </button>
                            </td>
                        </tr>
                    `;
                });
            } else {
                window.location.href = "/";
            }
        } catch (error) {
            console.error('Error:', error);
        }
    };
    
    takeDataTable();

    const ReadRequest = (message, id) => {
        document.getElementById('messageModal').classList.add('active');
        document.getElementById('message_content').value = decodeURIComponent(message);
        
        const row = document.getElementById(id);
        if (row.classList.contains('unread-row')) {
            row.classList.remove('unread-row');
            
            const statusBadge = row.querySelector('.status-badge');
            statusBadge.classList.remove('status-unread');
            statusBadge.classList.add('status-read');
            statusBadge.innerHTML = '<i class="fa-solid fa-check" style="margin-right: 6px; font-size: 8px;"></i>Đã đọc';
            
            row.querySelector('td:nth-child(2)').style.fontWeight = '400';
            
            axios({
                method: "post",
                url: "/api/admin/contact/ReadRequestCustomer",
                data: { IdRequest: id, tokenJWT },
                headers: { "Content-Type": "multipart/form-data" }
            }).catch(console.error);

            let count = parseInt(localStorage['countUnreaderRequest'] || '0');
            if (count > 0) {
                count--;
                localStorage.setItem('countUnreaderRequest', String(count));
                document.getElementById('notification_count_unreadrequest').textContent = count;
            }
        }
    };

    const closeMessageModal = () => {
        document.getElementById('messageModal').classList.remove('active');
    };
</script>
