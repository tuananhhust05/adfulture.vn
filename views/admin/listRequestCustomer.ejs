            <div class="apple-form-group mb-0">
                <label class="apple-form-label">Tin nhắn từ khách hàng</label>
                <textarea class="apple-input" id="message_content" rows="6" readonly style="resize: none; min-height: 150px;"></textarea>
            </div>
        </div>
        <div class="apple-modal-footer">
            <button class="apple-btn apple-btn-secondary" onclick="closeMessageModal()">Đóng</button>
        </div>
    </div>
