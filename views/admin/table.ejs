<!-- Modal Create Product -->
<div class="apple-modal-overlay" id="createProductModal">
    <div class="apple-modal">
        <div class="apple-modal-header">
            <h3 class="apple-modal-title">Thêm sản phẩm mới</h3>
            <button class="apple-modal-close" onclick="handleCloseFormCreateProduct()">
                <i class="fa-solid fa-xmark"></i>
            </button>
        </div>
        <div class="apple-modal-body">
            <div class="apple-form-group">
                <label class="apple-form-label">Loại sản phẩm</label>
                <input type="text" class="apple-input" id="create_type" placeholder="Ví dụ: streethouse, villa...">
            </div>
            <div class="apple-form-group">
                <label class="apple-form-label">Tiêu đề</label>
                <input type="text" class="apple-input" id="create_title" placeholder="Nhập tiêu đề sản phẩm">
            </div>
            <div class="apple-form-group">
                <label class="apple-form-label">Địa điểm</label>
                <input type="text" class="apple-input" id="create_site" placeholder="Nhập địa điểm">
            </div>
            <div class="apple-form-group mb-0">
                <label class="apple-form-label">Phân khúc</label>
                <input type="text" class="apple-input" id="create_typeAdd" placeholder="Ví dụ: np2t, bt1t...">
            </div>
        </div>
        <div class="apple-modal-footer">
            <button class="apple-btn apple-btn-secondary" onclick="handleCloseFormCreateProduct()">Hủy</button>
            <button class="apple-btn apple-btn-primary" onclick="CreateProduct()">Thêm sản phẩm</button>
        </div>
    </div>
</div>

<script>
    let type = "all";
    let typeAdd = 'all';
    let tokenJWT = localStorage['token'];
    
    document.getElementById('notification_count_unreadrequest').textContent = localStorage['countUnreaderRequest'] || '0';
    
    let array_check = [
        { type: "streethouse", typeAddArr: ['all', 'np2t', 'np3t', 'np4t'] },
        { type: "villa", typeAddArr: ['all', 'bt1t', 'bt2t', 'bt3t'] }
    ];
    let arrIdChange = [];

    const takeDataTable = async () => {
        try {
            const res = await axios({
                method: "post",
                url: "/api/admin/homepage/GetListProduct",
                data: { type, typeAdd, tokenJWT },
                headers: { "Content-Type": "multipart/form-data" }
            });
            
            if (res.data?.data) {
                const tbody = document.getElementById('data_table_root');
                tbody.innerHTML = '';
                
                res.data.data.forEach(item => {
                    tbody.innerHTML += `
                        <tr id="${item._id}">
                            <td>
                                <input type="text" class="apple-input apple-input-sm"
                                    onchange="ChangeDataProduct('${item._id}')"
                                    id="${item._id}site"
                                    value="${item.site}">
                            </td>
                            <td>
                                <input type="text" class="apple-input apple-input-sm"
                                    onchange="ChangeDataProduct('${item._id}')"
                                    id="${item._id}title"
                                    value="${item.title}">
                            </td>
                            <td>
                                <input type="text" class="apple-input apple-input-sm"
                                    onchange="ChangeDataProduct('${item._id}')"
                                    id="${item._id}type"
                                    value="${item.type}">
                            </td>
                            <td>
                                <input type="text" class="apple-input apple-input-sm"
                                    onchange="ChangeDataProduct('${item._id}')"
                                    id="${item._id}typeAdd"
                                    value="${item.typeAdd}">
                            </td>
                            <td>
                                <img class="apple-table-img" id="${item._id}img"
                                    src="${item.img[0]}" alt="${item.title}">
                            </td>
                            <td>
                                <div class="apple-file-input">
                                    <input type="file" id="file${item._id}" 
                                        onchange="StartUploadFile('${item._id}')">
                                    <span class="apple-file-label">
                                        <i class="fa-solid fa-upload"></i>
                                        Tải lên
                                    </span>
                                </div>
                            </td>
                            <td>
                                <button class="apple-btn apple-btn-danger apple-btn-sm" 
                                    onclick="DeleteProduct('${item._id}')">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    `;
                });
            } else {
                window.location.href = "/";
            }
        } catch (error) {
            console.error('Error:', error);
        }
    };
    
    takeDataTable();

    const handleChangeType = (value) => {
        type = value;
        typeAdd = 'all';
        document.getElementById('data_table_root').innerHTML = '';
        
        const filterTypeAdd = document.getElementById('filterTypeAdd');
        
        if (type !== "all") {
            filterTypeAdd.style.display = 'block';
            filterTypeAdd.innerHTML = '';
            
            if (type === "streethouse") {
                filterTypeAdd.innerHTML = `
                    <option value="all">Tất cả</option>
                    <option value="np2t">Nhà 2 tầng</option>
                    <option value="np3t">Nhà 3 tầng</option>
                    <option value="np4t">Nhà 4 tầng</option>
                `;
            } else if (type === "villa") {
                filterTypeAdd.innerHTML = `
                    <option value="all">Tất cả</option>
                    <option value="bt1t">Biệt thự 1 tầng</option>
                    <option value="bt2t">Biệt thự 2 tầng</option>
                    <option value="bt3t">Biệt thự 3 tầng</option>
                `;
            } else {
                filterTypeAdd.style.display = 'none';
            }
        } else {
            filterTypeAdd.style.display = 'none';
        }
        
        takeDataTable();
    };

    const handleChangeTypeAdd = (value) => {
        typeAdd = value;
        const found = array_check.find(e => e.type === type);
        if (found?.typeAddArr.includes(typeAdd)) {
            takeDataTable();
        }
    };

    const StartUploadFile = async (id) => {
        try {
            const fd = new FormData();
            const file = document.getElementById(`file${id}`).files[0];
            fd.append('file', file);
            fd.append('IdProduct', id);
            fd.append('tokenJWT', tokenJWT);
            
            const response = await axios.post('/api/admin/file/upload/product', fd, {
                headers: { 'Content-Type': 'multipart/form-data' }
            });
            
            if (response?.data?.data) {
                document.getElementById(`${id}img`).src = response.data.data;
                showToast('Tải ảnh thành công!');
            }
        } catch (error) {
            console.error(error);
            showToast('Có lỗi xảy ra!', 'error');
        }
    };

    const ChangeDataProduct = (id) => {
        if (!arrIdChange.includes(id)) {
            arrIdChange.push(id);
        }
    };

    const SaveChange = async () => {
        if (arrIdChange.length) {
            for (const id of arrIdChange) {
                await axios({
                    method: "post",
                    url: "/api/admin/homepage/EditProduct",
                    data: {
                        site: document.getElementById(`${id}site`).value,
                        title: document.getElementById(`${id}title`).value,
                        type: document.getElementById(`${id}type`).value,
                        typeAdd: document.getElementById(`${id}typeAdd`).value,
                        _id: id,
                        tokenJWT
                    },
                    headers: { "Content-Type": "multipart/form-data" }
                });
            }
            arrIdChange = [];
            showToast('Lưu thành công!');
        }
    };

    const handleOpenFormCreateProduct = () => {
        document.getElementById('createProductModal').classList.add('active');
    };

    const handleCloseFormCreateProduct = () => {
        document.getElementById('createProductModal').classList.remove('active');
    };

    const CreateProduct = async () => {
        try {
            const res = await axios({
                method: "post",
                url: "/api/admin/homepage/CreateProduct",
                data: {
                    site: document.getElementById('create_site').value,
                    title: document.getElementById('create_title').value,
                    type: document.getElementById('create_type').value,
                    typeAdd: document.getElementById('create_typeAdd').value,
                    tokenJWT
                },
                headers: { "Content-Type": "multipart/form-data" }
            });
            
            if (res?.data?.data) {
                handleCloseFormCreateProduct();
                takeDataTable();
                showToast('Thêm sản phẩm thành công!');
                
                document.getElementById('create_site').value = '';
                document.getElementById('create_title').value = '';
                document.getElementById('create_type').value = '';
                document.getElementById('create_typeAdd').value = '';
            }
        } catch (error) {
            console.error(error);
            showToast('Có lỗi xảy ra!', 'error');
        }
    };

    const DeleteProduct = async (id) => {
        if (confirm('Bạn có chắc muốn xóa sản phẩm này?')) {
            try {
                await axios({
                    method: "post",
                    url: "/api/admin/homepage/DeleteProduct",
                    data: { _id: id, tokenJWT },
                    headers: { "Content-Type": "multipart/form-data" }
                });
                document.getElementById(id).remove();
                showToast('Xóa sản phẩm thành công!');
            } catch (error) {
                console.error(error);
                showToast('Có lỗi xảy ra!', 'error');
            }
        }
    };
</script>
