<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.4/axios.min.js"></script> 
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script> 
<script>
    let type = "all";
    let typeAdd = 'all';
    let tokenJWT = localStorage['token'];
    let array_check = [
        {
            type:"streethouse",
            typeAddArr:['all','np2t','np3t','np4t']
        },
        {
            type:"villa",
            typeAddArr:['all','bt1t','bt2t','bt3t']
        }
    ];
    let arrIdChange = [];
    // hide select form typeAdd
    $('#selecform_typeAdd').hide();
   
    const takeDataTable = async ()=>{
        let res = await axios({
            method: "post",
            url: "/api/admin/homepage/GetListProduct",
            data: {
                type,
                typeAdd,
                tokenJWT
            },
            headers: { "Content-Type": "multipart/form-data" }
        })
        if(res.data && res.data.data){
            $('#data_table_root').html('')
            for(let i=0; i<res.data.data.length; i++){
                $('#data_table_root').append(`
                        <tr id="${res.data.data[i]._id}">
                            <td>
                                <input type="text" 
                                       onchange="ChangeDataProduct('${res.data.data[i]._id}')"
                                       id="${res.data.data[i]._id}site"
                                       value="${res.data.data[i].site}" 
                                       class="btn btn-primary"/>
                            </td>
                            <td>
                                <input 
                                      onchange="ChangeDataProduct('${res.data.data[i]._id}')"
                                      id="${res.data.data[i]._id}title" 
                                      value="${res.data.data[i].title}" class="btn btn-primary"/>
                            </td>
                            <td>
                                <input 
                                      onchange="ChangeDataProduct('${res.data.data[i]._id}')"
                                      id="${res.data.data[i]._id}type" 
                                      value="${res.data.data[i].type}" class="btn btn-primary"/>
                            </td>
                            <td>
                                <input onchange="ChangeDataProduct('${res.data.data[i]._id}')"
                                       id="${res.data.data[i]._id}typeAdd"
                                       value="${res.data.data[i].typeAdd}" class="btn btn-primary"/>
                            </td>
                            <td>
                                <img className="img_product" style="height:40px;width:40px;border-radius:3px" 
                                     src="${res.data.data[i].img[0]}" alt="img${res.data.data[i]._id}"/>
                            </td>
                            <td>
                                <div >
                                    <input onchange="StartUploadFile('${res.data.data[i]._id}')" class="btn btn-primary" type="file" id="file${res.data.data[i]._id}" name="file" />
                                </div>
                            </td>
                        </tr>
                `);
            }
        }
        else{
            window.location.href = "/";
        }
    }
    takeDataTable();

    const handleChangeType = async (value)=>{
        try{
            type = value;
            typeAdd = 'all'
            $('#data_table_root').html('');
            if(String(type) !== "all"){
                $('#selecform_typeAdd').show();
                $('#selecform_typeAdd').html('');
                if(String(type) === "streethouse"){
                    $('#selecform_typeAdd').append(`
                        <option value="all">all</option>
                        <option value="np2t">np2t</option>
                        <option value="np3t">np3t</option>
                        <option value="np4t">np4t</option>
                    `);
                }
                else if(String(type) === "villa"){
                    $('#selecform_typeAdd').append(`
                        <option value="all">all</option>
                        <option value="bt1t">bt1t</option>
                        <option value="bt2t">bt2t</option>
                        <option value="bt3t">bt3t</option>
                    `);
                }
                else{
                    $('#selecform_typeAdd').hide();
                }
            }else{
                $('#selecform_typeAdd').hide();
            }
            takeDataTable();
        }
        catch(e){
            console.log("handleChangeType",e)
        }
    }

    const handleChangeTypeAdd = async (value)=>{
        try{
            typeAdd = value;
            if( array_check.find((e=> String(e.type) === String(type) )) ){
                if( array_check.find((e=> String(e.type) === String(type) )).typeAddArr.find((e)=> String(e) === String(typeAdd)) ){
                    takeDataTable();
                }
            }
        }
        catch(e){
            console.log("handleChangeTypeAdd",e)
        }
    }

    const StartUploadFile = async (id)=>{
        try{
            const config = {
                header: { 'Content-Type': 'multipart/form-data' }
            };
            let fd = new FormData();
            let file = $(`#file${id}`)[0].files[0];
            fd.append('file', file);
            fd.append('IdProduct',id);
            fd.append('tokenJWT',tokenJWT)
            axios.post(`/api/admin/file/upload/product`,fd, config)
                .then(response => {
                    console.log(response.data);
                    if (response && response.data && response.data.data) {
                        console.log(response.data.data);
                    }
            }).catch((e)=>{console.log(e)});
            console.log(file);
        }
        catch(e){
            console.log(e)
        }
    }
    
    // just change when you click to other position 
    const ChangeDataProduct = (id)=>{
        try{
            console.log(id);
            if(!arrIdChange.find((e)=> String(e) === String(id))){
                arrIdChange.push(String(id));
            };
        }
        catch(e){
            console.log(e);
        }
    }

    const SaveChange = async () =>{
        try{
           if(arrIdChange.length){
               for(let i=0; i<arrIdChange.length; i++){
                    axios({
                        method: "post",
                        url: "/api/admin/homepage/EditProduct",
                        data: {
                            site:$(`#${arrIdChange[i]}site`).val(),
                            title:$(`#${arrIdChange[i]}title`).val(),
                            type:$(`#${arrIdChange[i]}type`).val(),
                            typeAdd:$(`#${arrIdChange[i]}typeAdd`).val(),
                            _id:arrIdChange[i],
                            tokenJWT
                        },
                        headers: { "Content-Type": "multipart/form-data" }
                    }).catch((e)=>{
                        console.log("SaveChange",e)
                    })
               };
               $('#notification_save').show();
           }
           setTimeout(()=>{
             $('#notification_save').hide();
           },2000);
        }
        catch(e){
            console.log(e);
        }
    }  
</script>