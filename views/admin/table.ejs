<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.4/axios.min.js"></script> 
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script> 
<script>
    let type = "all";
    let typeAdd = 'all';
    let tokenJWT = localStorage['token'];
    let array_check = [
        {
            type:"streethouse",
            typeAddArr:['np2t','np3t','np4t']
        },
        {
            type:"villas",
            typeAddArr:['bt1t','bt2t','bt3t']
        }
    ]
    // hide select form typeAdd
    $('#selecform_typeAdd').hide();
    const ShowDetail = (data)=>{
        let obj = JSON.parse(decodeURIComponent(data));
        console.log(obj);
    }

    const takeDataTable = async ()=>{
        let res = await axios({
            method: "post",
            url: "/api/admin/homepage/GetListProduct",
            data: {
                type,
                typeAdd,
                tokenJWT
            },
            headers: { "Content-Type": "multipart/form-data" }
        })
        if(res.data && res.data.data){
            console.log(res.data.data);
            for(let i=0; i<res.data.data.length; i++){
                $('#data_table_root').append(`
                        <tr id="${res.data.data[i]._id}" onclick="ShowDetail('${encodeURIComponent(JSON.stringify(res.data.data[i]))}')">
                            <td>${res.data.data[i].site}</td>
                            <td>${res.data.data[i].title}</td>
                            <td>${res.data.data[i].type}</td>
                            <td>${res.data.data[i].typeAdd}</td>
                            <td>
                                <img className="img_product" style="height:40px;width:40px;border-radius:3px" 
                                     src="${res.data.data[i].img[0]}" alt="img${res.data.data[i]._id}"/>
                            </td>
                        </tr>
                `);
            }
        }
        else{
            window.location.href = "/";
        }
    }
    takeDataTable();

    const handleChangeType = async (value)=>{
        try{
            type = value;
            $('#data_table_root').html('');
            if(String(type) !== "all"){
                $('#selecform_typeAdd').show();
                $('#selecform_typeAdd').html('');
                if(String(type) === "streethouse"){
                    $('#selecform_typeAdd').append(`
                        <option value="np2t">np2t</option>
                        <option value="np3t">np3t</option>
                        <option value="np4t">np4t</option>
                    `);
                }
                else if(String(type) === "villa"){
                    $('#selecform_typeAdd').append(`
                        <option value="bt1t">bt1t</option>
                        <option value="bt2t">bt2t</option>
                        <option value="bt3t">bt3t</option>
                    `);
                }
                else{
                    $('#selecform_typeAdd').hide();
                }
            }else{
                $('#selecform_typeAdd').hide();
            }
            takeDataTable();
        }
        catch(e){
            console.log("handleChangeType",e)
        }
    }

    const handleChangeTypeAdd = async (value)=>{
        try{
            typeAdd = value;
            console.log(type,typeAdd);
            if( array_check.find((e=> String(e.type) === String(type) )) ){
                if( array_check.find((e=> String(e.type) === String(type) )).typeAddArr.find((e)=> String(e) === String(typeAdd)) ){
                    takeDataTable();
                }
            }
        }
        catch(e){
            console.log("handleChangeTypeAdd",e)
        }
    }
</script>